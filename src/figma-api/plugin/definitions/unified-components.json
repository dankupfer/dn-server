{
  "App_frame": {
    "componentType": "frame",
    "name": "App_frame",
    "label": "App Frame",
    "description": "Main application frame component",
    
    "width": 393,
    "height": 852,
    "backgroundColor": "#E3F2FD",
    "elements": [
      { "type": "text", "content": "App Frame", "x": 20, "y": 20, "fontSize": 24, "fontWeight": 700 },
      { "type": "text", "content": "Full screen app container", "x": 20, "y": 55, "fontSize": 14, "color": "#666666" },
      { "type": "text", "content": "Use plugin UI to configure →", "x": 20, "y": 100, "fontSize": 12, "color": "#666666" }
    ],
    
    "fields": [
      {
        "key": "appName",
        "type": "text",
        "label": "App Name",
        "description": "Name of the application",
        "defaultValue": "",
        "required": true,
        "placeholder": "my-app"
      },
      {
        "key": "brand",
        "type": "select",
        "label": "Brand",
        "description": "Brand theme to use",
        "defaultValue": "reimaginedLloyds",
        "required": true,
        "options": [
          "reimaginedLloyds",
          "reimaginedHalifax",
          "reimaginedScottishWidows",
          "reimaginedMbna",
          "reimaginedBos"
        ]
      },
      {
        "key": "mode",
        "type": "select",
        "label": "Theme Mode",
        "description": "Light or dark theme",
        "defaultValue": "light",
        "required": true,
        "options": ["light", "dark"]
      },
      {
        "key": "apiBase",
        "type": "text",
        "label": "API Base URL",
        "description": "Base URL for API calls",
        "defaultValue": "http://localhost:3001",
        "required": false,
        "placeholder": "https://api.example.com"
      },
      {
        "key": "defaultCustomerId",
        "type": "text",
        "label": "Default customer",
        "description": "Choose the default customer for the beginning of the journey",
        "defaultValue": "",
        "required": false,
        "placeholder": "cust_1758054135313_al2bczxir"
      }
    ]
  },

  "ScreenBuilder_frame": {
    "componentType": "frame",
    "name": "ScreenBuilder_frame",
    "label": "ScreenBuilder Frame",
    "description": "Frame for JSON-driven screen building",
    
    "width": 393,
    "height": 852,
    "backgroundColor": "#FFF3E0",
    "elements": [
      { "type": "text", "content": "ScreenBuilder Frame", "x": 20, "y": 20, "fontSize": 20, "fontWeight": 700 },
      { "type": "text", "content": "Drag Item components inside", "x": 20, "y": 50, "fontSize": 12, "color": "#666666" }
    ],
    
    "fields": [
      {
        "key": "id",
        "type": "text",
        "label": "Screen ID",
        "description": "Unique identifier for this screen",
        "defaultValue": "",
        "required": true,
        "placeholder": "screen-id",
        "maps_to": "prop0"
      },
      {
        "key": "name",
        "type": "text",
        "label": "Screen Name",
        "description": "Human-readable name",
        "defaultValue": "",
        "required": true,
        "placeholder": "My Screen",
        "maps_to": "prop1"
      },
      {
        "key": "title",
        "type": "text",
        "label": "Screen Title",
        "description": "Title shown in header",
        "defaultValue": "",
        "required": false,
        "placeholder": "Screen Title",
        "maps_to": "prop2"
      },
      {
        "key": "section_type",
        "type": "select",
        "label": "Section Type",
        "description": "Type of section for navigation",
        "defaultValue": "main-carousel",
        "required": true,
        "options": ["main-carousel", "slide-panel", "full-screen", "modal"],
        "maps_to": "prop3"
      },
      {
        "key": "sectionHome",
        "type": "checkbox",
        "label": "Include in Home Section",
        "description": "Show this screen in the home section carousel",
        "defaultValue": false,
        "required": false,
        "maps_to": "prop4",
        "conditionalRules": {
          "disableWhen": { "section_type": ["full-screen"] },
          "hideWhen": { "section_type": ["full-screen"] }
        },
        "conditionalField": {
          "key": "sectionHomeOption",
          "type": "select",
          "label": "Home Section Option",
          "description": "Select which home section to include",
          "showWhen": { "sectionHome": true },
          "optionsFrom": "section_type",
          "optionsMap": {
            "main-carousel": ["summary", "everyday", "invest", "borrow", "homes", "insurance"],
            "slide-panel": ["home", "apply", "cards"],
            "modal": ["payments", "search"]
          }
        }
      }
    ]
  },

  "Journey": {
    "componentType": "journey",
    "name": "Journey",
    "label": "Journey Component",
    "description": "Self-contained journey with complex functionality",
    
    "width": 393,
    "height": 568,
    "backgroundColor": "#FFF3E0",
    "elements": [
      { "type": "text", "content": "Journey Component", "x": 20, "y": 20, "fontSize": 20, "fontWeight": 700 },
      { "type": "text", "content": "Self-contained journey", "x": 20, "y": 50, "fontSize": 12, "color": "#666666" },
      { "type": "text", "content": "Select Type to configure →", "x": 20, "y": 70, "fontSize": 12, "color": "#666666" }
    ],
    
    "hasConfigurations": true,
    "configurationField": {
      "key": "journeyOption",
      "type": "select",
      "label": "Journey Configuration",
      "description": "Select the type of journey to configure",
      "required": true
    },
    
    "commonFields": [
      {
        "key": "id",
        "type": "text",
        "label": "Journey ID",
        "description": "Unique identifier",
        "defaultValue": "",
        "required": true,
        "placeholder": "journey-id",
        "maps_to": "prop0"
      },
      {
        "key": "name",
        "type": "text",
        "label": "Journey Name",
        "description": "Short label for navigation",
        "defaultValue": "",
        "required": true,
        "placeholder": "My Journey",
        "maps_to": "prop1"
      },
      {
        "key": "title",
        "type": "text",
        "label": "Journey Title",
        "description": "Full title for headers",
        "defaultValue": "",
        "required": false,
        "placeholder": "Journey Title",
        "maps_to": "prop2"
      },
      {
        "key": "section_type",
        "type": "select",
        "label": "Section Type",
        "description": "Navigation section placement",
        "defaultValue": "main-carousel",
        "required": true,
        "options": ["main-carousel", "slide-panel", "full-screen", "modal"],
        "maps_to": "prop3"
      },
      {
        "key": "sectionHome",
        "type": "checkbox",
        "label": "Include in Home Section",
        "description": "Show in home carousel",
        "defaultValue": false,
        "required": false,
        "maps_to": "prop4",
        "conditionalRules": {
          "disableWhen": { "section_type": ["full-screen"] }
        },
        "conditionalField": {
          "key": "sectionHomeOption",
          "type": "select",
          "label": "Home Section Option",
          "description": "Which home section",
          "showWhen": { "sectionHome": true },
          "optionsFrom": "section_type",
          "optionsMap": {
            "main-carousel": ["summary", "everyday", "invest", "borrow", "homes", "insurance"],
            "slide-panel": ["home", "apply", "cards"],
            "modal": ["payments", "search"]
          },
          "maps_to": "prop8"
        }
      }
    ],
    
    "configurations": {
      "CoreJourney": {
        "label": "Core Journey",
        "description": "Standard customer journey flow",
        "fields": [
          {
            "key": "customer-id",
            "type": "text",
            "label": "Customer ID",
            "description": "ID of the customer data to load",
            "defaultValue": "customer-1",
            "required": false,
            "maps_to": "prop5"
          }
        ]
      },
      "AssistJourney": {
        "label": "Assist Journey",
        "description": "Customer assistance and support flow",
        "fields": [
          {
            "key": "tts",
            "type": "checkbox",
            "label": "Enable TTS (text-to-speech)",
            "description": "Enable text-to-speech for voice interactions",
            "defaultValue": false,
            "required": false,
            "maps_to": "prop6"
          },
          {
            "key": "gemini",
            "type": "checkbox",
            "label": "Enable Gemini",
            "description": "Use Gemini AI instead of mock mode",
            "defaultValue": false,
            "required": false,
            "maps_to": "prop7"
          }
        ]
      },
      "WebviewJourney": {
        "label": "Webview Journey",
        "description": "Basic Webview wrapper",
        "fields": [
          {
            "key": "defaultUrl",
            "type": "text",
            "label": "Default URL",
            "description": "Enter the URL to display in the webview",
            "defaultValue": "",
            "required": true,
            "maps_to": "prop5"
          }
        ]
      }
    }
  },

